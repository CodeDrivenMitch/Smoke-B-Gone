                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/hb1" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:max="100" />
            
